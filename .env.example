# Retention cleanup (Convex)
# Disabled by default for safety. Enable explicitly after verifying dry-run logs.
RETENTION_ENABLED=false
RETENTION_DRY_RUN=true
RETENTION_MAX_DELETE=10

# Admin maintenance (Convex) - backfills, maintenance tasks
ADMIN_MAINTENANCE_ENABLED=false

# Recovery import (Convex) - reconstructed appointments
RECOVERY_IMPORT_ENABLED=false
